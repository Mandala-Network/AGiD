{
  "name": "agidentity",
  "version": "0.1.0",
  "description": "BSV blockchain wallet and identity for AI agents - OpenClaw wrapper with Shad memory and UHRP storage",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "agid": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./plugin": {
      "types": "./dist/plugin/agidentity-plugin.d.ts",
      "default": "./dist/plugin/agidentity-plugin.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "cli": "node dist/cli/index.js",
    "cli:info": "node dist/cli/index.js info",
    "cli:chat": "node dist/cli/index.js chat"
  },
  "dependencies": {
    "@bsv/auth-express-middleware": "^2.0.2",
    "@bsv/message-box-client": "^2.0.0",
    "@bsv/sdk": "^2.0.3",
    "@bsv/wallet-toolbox": "^2.0.14",
    "commander": "^12.0.0",
    "curvepoint": "github:p2ppsr/curvepoint",
    "dotenv": "^17.3.1",
    "express": "^5.0.0",
    "zod": "^3.23.0"
  },
  "peerDependencies": {
    "openclaw": ">=2026.0.0"
  },
  "peerDependenciesMeta": {
    "openclaw": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "bsv",
    "blockchain",
    "wallet",
    "ai",
    "agent",
    "identity",
    "openclaw",
    "shad",
    "uhrp",
    "encryption"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/agidentity"
  }
}
